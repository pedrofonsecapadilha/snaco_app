<div class="main-container">

    <%# sidebar %>
    <div class='sidebar'>

        <%= image_tag 'logo_rest.png', class: "d-grid gap-2 col-10 mx-auto mb-3" %>

        <div class="d-grid gap-2 col-10 mx-auto">
            <%= link_to 'Dashboard', '#', class: 'btn btn-primary' %>

            <button class="btn btn-primary border border-white border-3" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFornecedores" aria-expanded="false" aria-controls="collapseFornecedores">Fornecedores</button>
            <div class="collapse" id="collapseFornecedores">
                <div class="card align-items-end p-0 border-0 card-bg" style="background-color: rgba(255, 0, 0, 0)";>
                    <%= link_to 'Insumos', insumos_path, class: 'btn btn-primary col-10 mb-2' %>
                    <%= link_to 'Colaboradores', colaboradores_path, class: 'btn btn-primary col-10 mb-2 border border-white border-3' %>
                </div>
            </div>

            <%= link_to 'Produtos', produtos_path, class: 'btn btn-primary' %>
            <%= link_to 'Tabela de Preços', '#', class: 'btn btn-primary' %>
        </div>
    </div>

